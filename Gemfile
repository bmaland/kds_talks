source 'https://rubygems.org'

gem 'rails', '3.2.12'

gem 'thin'
gem 'nokogiri'

group :production do
  gem 'pg'
end

group :test, :development do
  gem 'awesome_print'
  gem 'rspec-rails'
  gem 'sqlite3'
end

group :test do
  gem 'guard-rspec'
  gem 'rb-fsevent'
  gem 'listen'
end

# Gems used only for assets and not required
# in production environments by default.
