  gem 'sass-rails', '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.2'
  gem 'uglifier', '>= 1.0.3'
  gem 'zurb-foundation', '~> 4.0'
end

gem 'jquery-rails', '~> 2.2.1'
